<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/item_device_data"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_800"
            android:text="Nexus 7"/>

        <TextView
            android:id="@+id/item_device_os"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_800"
            android:text="Android 4.0"/>

        <TextView
            android:id="@+id/item_device_screen_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_800"
            android:text="1280 * 1080"/>

        <TextView
            android:id="@+id/item_device_taiwan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_800"
            android:text="NG"/>

        <TextView
            android:id="@+id/item_device_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_blue_grey_800"
            android:text="貸出中"/>

    </LinearLayout>

    <Button
        android:id="@+id/item_device_button"
        android:layout_alignBottom="@id/item_device_data"
        android:layout_alignRight="@id/item_device_data"
        android:layout_alignEnd="@id/item_device_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/small_shape_radius_button"
        />

</RelativeLayout>